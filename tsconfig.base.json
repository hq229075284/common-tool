{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    // "lib": ["DOM", "ESNext"],
    "declaration": true,
    "declarationDir": "dist/esm/@types",
    "outDir": "dist/esm",
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "**/example.ts"],
  "include": ["src/**/*"]
}
