{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "declarationDir": "dist/@types",
    "outDir": "dist",
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "**/example.ts"],
  "include": ["src/**/*"]
}
